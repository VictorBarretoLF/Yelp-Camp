<form
  action="/campgrounds/<%= campground._id %>?_method=PATCH"
  method="POST"
  class="form-container"
>
  <div class="form-inputs">
    <label for="title">Title</label>
    <input
      type="text"
      name="campground[title]"
      id="title"
      value="<%= campground.title %>"
    />
  </div>
  <div class="form-inputs">
    <label for="location">Location</label>
    <input
      type="text"
      name="campground[location]"
      id="location"
      value="<%= campground.location %>"
    />
  </div>
  <div class="form-inputs">
    <label for="image">Image Url</label>
    <input
      type="text"
      name="campground[image]"
      id="image"
      value="<%= campground.image %>"
    />
  </div>
  <div class="form-inputs">
    <label for="price">Price</label>
    <input
      type="number"
      name="campground[price]"
      id="price"
      value="<%= campground.price %>"
      min="0"
    />
  </div>
  <div class="form-inputs">
    <label for="description">description</label>
    <input
      type="text"
      name="campground[description]"
      id="description"
      value="<%= campground.description %>"
    />
  </div>
  <button class="btn-form" style="background-color: dodgerblue">Update</button>
  <a href="/campgrounds/<%= campground._id %>" class="btn-back"
    >Back to Campground</a
  >
</form>
